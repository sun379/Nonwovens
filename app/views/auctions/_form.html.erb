<%= form_for @auction, :html => { :class => "form-horizontal auction" } do |f| %>



    <% if @auction.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@auction.errors.count, "error") %> prohibited this auction from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @auction.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%= error_span(@auction[:title]) %>
  </div>
  <div class="control-group">
    <%= f.label :auction_details, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :auction_details, :class => 'form-control' %>
    </div>
    <%= error_span(@auction[:auction_details]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            auctions_path, :class => 'btn btn-default' %>

<% end %>
